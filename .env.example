# EuroStyle Retail Demo - Environment Configuration Template
# Copy this to .env and customize for your environment

# Project Identity
PROJECT_NAME="eurostyle-retail-demo"
PROJECT_SLUG="eurostyle_retail_demo"
PROJECT_ROOT="/path/to/your/project"

# Container Configuration
CLICKHOUSE_CONTAINER_NAME="eurostyle_clickhouse_retail"
CLICKHOUSE_HTTP_PORT="8124"  # EuroStyle Retail Demo HTTP port
CLICKHOUSE_NATIVE_PORT="9002"  # EuroStyle Retail Demo Native port
CLICKHOUSE_MEMORY_LIMIT="10g"

# Network Configuration  
DOCKER_NETWORK="eurostyle_retail_network"

# Database Configuration
DEFAULT_DATABASE="eurostyle_operational"
CLICKHOUSE_USER="eurostyle_user"
CLICKHOUSE_PASSWORD="your_demo_password_here"

# Data Paths
CSV_DATA_PATH="${PROJECT_ROOT}/data/csv"
LOGS_PATH="${PROJECT_ROOT}/logs"
TMP_PATH="${PROJECT_ROOT}/tmp"

# Generation Configuration
DEMO_MODE="development"
DEFAULT_GENERATION_SCALE="demo"